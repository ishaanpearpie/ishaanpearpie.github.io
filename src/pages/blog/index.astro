            <!-- Terminal footer -->
            <div class="mt-8 text-[var(--text-tertiary)]">
              <p class="found-posts-desktop">
                <span class="text-terminal-green">$</span> Found <span class="posts-count">{posts.length}</span> <span class="posts-label">{posts.length === 1 ? 'post' : 'posts'}</span>
