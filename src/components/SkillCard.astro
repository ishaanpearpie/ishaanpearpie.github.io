---
interface Skill {
  name: string;
  icon: string;
  proficiency?: number;
}

interface Props {
  category: string;
  skills: Skill[];
}

const { category, skills } = Astro.props;
---

<article class="glow-border rounded-xl p-6 bg-[var(--bg-elevated)]">
  <h3 class="text-xl font-bold text-cyber-cyan mb-4 border-b border-[var(--border-color)] pb-3">
    {category}
  </h3>
  <ul class="space-y-3">
    {skills.map((skill) => (
      <li class="group flex items-center gap-3 transition-all duration-300">
        <div class="w-8 h-8 flex items-center justify-center rounded-lg bg-[var(--bg-primary)] border border-[var(--border-color)] group-hover:border-cyber-cyan transition-all duration-300">
          <img 
            src={`https://cdn.simpleicons.org/${skill.icon}`}
            alt={skill.name}
            class="w-5 h-5 opacity-70 group-hover:opacity-100 transition-opacity"
            style="filter: brightness(0) saturate(100%) invert(64%) sepia(85%) saturate(2076%) hue-rotate(159deg) brightness(101%) contrast(101%);"
          />
        </div>
        <span class="text-[var(--text-secondary)] group-hover:text-[var(--text-primary)] flex-1 transition-colors">
          {skill.name}
        </span>
      </li>
    ))}
  </ul>
</article>
