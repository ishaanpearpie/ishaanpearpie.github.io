---
interface Props {
  title: string;
  description: string;
  highlights: string[];
  technologies: string[];
  githubUrl?: string | null;
  featured?: boolean;
}

const { title, description, highlights, technologies, githubUrl, featured = false } = Astro.props;
---

<article class="group glow-border rounded-xl p-6 bg-[var(--bg-elevated)] hover:bg-[var(--bg-secondary)] transition-all duration-300">
  <div class="flex items-start justify-between mb-4">
    <h3 class="text-2xl font-bold text-[var(--text-primary)] group-hover:text-cyber-cyan transition-colors">
      {title}
    </h3>
    {featured && (
      <span class="px-3 py-1 text-xs font-semibold bg-cyber-blue/20 text-cyber-blue border border-cyber-blue/50 rounded-full">
        Featured
      </span>
    )}
  </div>

  <p class="text-[var(--text-secondary)] mb-4">
    {description}
  </p>

  <ul class="space-y-2 mb-6">
    {highlights.map((highlight) => (
      <li class="flex items-start gap-2 text-sm text-[var(--text-tertiary)]">
        <span class="text-terminal-green mt-1">â–¹</span>
        <span>{highlight}</span>
      </li>
    ))}
  </ul>

  <div class="flex flex-wrap gap-2 mb-6">
    {technologies.map((tech) => (
      <span class="px-3 py-1 text-xs font-mono bg-[var(--bg-primary)] border border-[var(--border-color)] rounded text-[var(--text-tertiary)]">
        {tech}
      </span>
    ))}
  </div>

  {githubUrl && (
    <a
      href={githubUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center gap-2 text-cyber-blue hover:text-cyber-cyan transition-colors font-medium"
    >
      View on GitHub
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
      </svg>
    </a>
  )}
</article>
